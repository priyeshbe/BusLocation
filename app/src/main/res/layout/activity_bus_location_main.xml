<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.beohar.priyesh.buslocation.BusLocationMain">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="See Alert Message For Logitude and Latitude."
        android:id="@+id/msgbox" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text=""
        android:layout_below="@id/msgbox"
        android:id="@+id/text" />
    <Spinner
        android:id="@+id/spinnerBusno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:entries="@array/buses"></Spinner>

    <Button
        android:id="@+id/buttonUpdateBusno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_below="@id/spinnerBusno"
        android:text="Set bus number" />

</android.support.constraint.ConstraintLayout>
